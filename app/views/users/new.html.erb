<h1>Sign up</h1>
<form action='<%= users_url %>' method='POST'>
  <%= auth_token_input %>
  <label>
    Email
    <input id='user_email' name='user[email]' type='text' value='<%= @user.email %>'>
  </label><br>
  <label>
    Password
    <input id='user_password' name='user[password]' type='password'>
  </label><br>

  <h2>Make your first post!</h2>
  <label>Body<br>
    <textarea name='post[body]'><%= @post.body %></textarea>
  </label><br>
  <label>Links<br>
    <% @post.links.each_with_index do |link, i| %>
      <label>Title
        <input type='text' name='links[<%= i %>][title]'
          value='<%= link.title %>'>
      </label>
      <label>URL
        <input type='text' name='links[<%= i %>][url]' value='<%= link.url %>'>
      </label><br>
    <% end %>
  </label>
  <label>Friend Circles<br>
    <br>
    <% @circles.each do |circle| %>
      <label>
        <input type='checkbox' value='<%= circle.id %>'
          name='post_share[friend_circle_ids][]'>
        <%= circle.name %>
      </label><br>
    <% end %>
  </label><br>

  <input type='submit' value='Sign up'>
</form>
